<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MyMeteo.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MyMeteo.AppWidgetContainer"
    android:id="@+id/widget_layout">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/idTVTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/idIVCond"
            android:gravity="left"
            android:text="@string/tempurature"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/idIVCond"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@drawable/meteo" />

        <TextView
            android:id="@+id/idTVCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVTemp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/idIVCond"
            android:gravity="center"

            android:padding="4dp"
            android:text="City Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>