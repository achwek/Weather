<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MyMeteo.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MyMeteo.AppWidgetContainer"
    android:id="@+id/widget_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/idTVCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/idIVCond"
            android:gravity="center"
            android:padding="4dp"
            android:text="City Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/idTVTemp"
            android:layout_width="96dp"
            android:layout_height="77dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:text="20Â°C"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/idIVCond"
            android:layout_width="83dp"
            android:layout_height="90dp"
            android:layout_below="@id/idTVTemp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-76dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@drawable/meteo" />

    </RelativeLayout>


</RelativeLayout>